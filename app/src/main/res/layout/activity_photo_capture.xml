<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhotoCaptureActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/photoCaptureMark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photo_capture_mark"
            android:onClick="onPhotoMark"/>

        <Button
            android:id="@+id/photoCaptureSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photo_capture_search"
            android:onClick="onPhotoSearch"/>
    </LinearLayout>
</FrameLayout>